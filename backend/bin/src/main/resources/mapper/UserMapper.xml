<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.insurance_backend.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.example.insurance_backend.entity.User">
        INSERT INTO users (username, password_hash)
        VALUES (#{username}, #{passwordHash})
    </insert>
    <select id="findByUsername" parameterType="string" resultType="com.example.insurance_backend.entity.User">
        SELECT id, username, password_hash as passwordHash
        FROM users
        WHERE username = #{username}
    </select>
</mapper>